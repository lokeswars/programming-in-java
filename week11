ResultSet result = stmt.executeQuery("SELECT * FROM players;");
int num=0,all=0;
while(result.next())
            {
	num++;
	all = all + Integer.parseInt(result.getString(4));
}
//Output
System.out.println("Average age of players is " +(all/num));
conn.close();
            
